/* Import */
@import './normalize'

/* Common */

html, body
  font-family 'Roboto Condensed', sans-serif
body
  background-image url(/images/background.jpg)
  background-repeat no-repeat
  background-attachment fixed
  background-position center center
  background-size cover
p
  font-family 'Crimson Text', serif
  letter-spacing 0.015em
a
  text-decoration none
  color #4e2188
  &:hover
    color #8e2188

/* hero */

.hero
  display flex
  justify-content center
  align-items center
  height 100vh
.hero-container
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-color #FFFFFF
  width 640px
  height 580px
  box-shadow 0px 12px 51px -10px rgba(0,0,0,0.6)
.hero-hello-world
  flex 1
  display flex
  flex-direction column
  justify-content center
  align-items center
h1
  font-size 2rem
  text-align center
  .blink
    font-size 4rem
    font-style normal
    font-weight normal
    line-height 9rem
.blink
  animation blink 3s ease-out 0s infinite
@keyframes blink
  50%
    opacity 0.4
  @-webkit-keyframesblink
  50%
    opacity 0.5
.hash-tag
  font-size 1rem
  font-weight bold
  font-style normal
.language-list
  display flex
  align-items center
  height 48px
  margin-bottom 36px
  padding 0
  list-style none
.language-list li a
  margin 0 6px
  padding 6px 12px
  font-size 1.2rem
  font-weight bold

/* main */

main
  background-color  white
  margin-top 0
  margin-right  auto
  margin-left  auto
  padding 2em 4em 6em 4em
  max-width  900px

.genesis div h3
  margin-top 2.2em
  margin-bottom  0.3em

.genesis div p
  margin-top  0

/* About styles */
.about div
  background-color  white
  margin-top 5em
  margin-right  auto
  margin-left  auto
  padding 2em 4em 3.5em 4em
  max-width  900px

.about h4
  margin-bottom  0

.about p
  font-family 'Roboto Condensed',sans-serif
  font-size  1.05em
  font-weight 300

/* contents styles */
.contents
  margin-top 20em
  margin-bottom  0
  padding-bottom  2em
  height auto
  width auto
  -webkit-box-shadow  0px -45px 260px 83px rgba(46,33,136,1)
     -moz-box-shadow  0px -45px 260px 83px rgba(46,33,136,1)
          box-shadow  0px -45px 260px 83px rgba(46,33,136,1)
  background-image  linear-gradient(0deg, #000, #2e2188)

/* footer */
footer p
  color #fff
  font-family 'Roboto Condensed',sans-serif
  font-size  0.8em
  text-align  center
  margin-top  6em
  margin-bottom  0
  padding-bottom  0

