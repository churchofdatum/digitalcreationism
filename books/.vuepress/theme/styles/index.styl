/* Import */

@import './normalize'

/* Common */

html, body
  font-family 'Roboto Condensed', sans-serif

body
  background-image url(/images/background.jpg)
  background-repeat no-repeat
  background-attachment fixed
  background-position center center
  background-size cover

p
  margin 0
  padding 0
  font-family 'Noto Serif', 'Roboto Slab', serif
  letter-spacing 0.015em

a
  text-decoration none
  color #4E2188
  &:hover
    color #8E2188

/* Cover */

.cover
  display flex
  justify-content center
  align-items center
  height 80vh

.cover-container
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-color #FFFFFF
  width 70%
  height 75%
  min-width 520px
  min-height 420px
  max-width 640px
  max-height 580px
  box-shadow 0px 12px 51px -10px rgba(0,0,0,0.6)

.cover-hello-world
  flex 1
  display flex
  flex-direction column
  justify-content center
  align-items center

.cover-hello-world h1
  display flex
  flex-direction column
  font-size 2rem
  text-align center

  .header-anchor
    display none

  em
    font-size 4rem
    font-style normal
    font-weight normal
    line-height 9rem
    animation blink 3s ease-out 0s infinite

@keyframes blink
  50%
    opacity 0.4
  @-webkit-keyframesblink
  50%
    opacity 0.5

.hash-tag
  font-size 1rem
  font-weight bold
  font-style normal

.language-list
  display flex
  align-items center
  height 48px
  margin-bottom 36px
  padding 0
  list-style none

.language-list li a
  margin 0 6px
  padding 6px 12px
  font-size 1.2rem
  font-weight bold

/* Main */

main
  display flex
  flex-direction column
  align-items center
  box-shadow 0px 0px 160px 140px #2e2188
  background-image linear-gradient(0deg, #000, #2e2188)

h1, h2, h3, h4, h5
  .header-anchor
    visibility hidden
    margin-left -0.77em
    margin-right -0.08em
    padding-right 0.30em

    &:hover
      visibility visible

  &:hover
    .header-anchor
      visibility visible

.content__default
  box-sizing border-box
  background-color white
  margin-bottom 7%
  padding 7%

.content__default h1
  text-align center
  font-size 4.0rem
  font-weight normal

.content__default h2
  margin-top 2.2em
  margin-bottom 0.4em
  font-size 1.8rem

.content__default p
  margin-bottom 1.6em
  font-size 1.3rem
  line-height 1.5em

/* About */

.content__about
  box-sizing border-box
  background-color white
  margin-bottom 7%
  padding 4% 7%

.content__about p
  font-family 'Roboto Condensed', sans-serif
  margin-bottom 1.6em
  font-size 1.05rem
  line-height 1.5em

/* Footer */

footer
  display flex
  justify-content center
  align-items center
  background-color black
  height 60px
  padding-bottom 1.2em

footer small
  color white

