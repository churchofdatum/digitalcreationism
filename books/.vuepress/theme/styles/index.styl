/* Import */

@import './normalize'

/* Common */

html, body
  font-family 'Roboto Condensed', sans-serif

body
  background-image url(/images/background.jpg)
  background-repeat no-repeat
  background-attachment fixed
  background-position center center
  background-size cover

p
  margin 0
  padding 0
  font-family 'Crimson Text', serif
  letter-spacing 0.015em

a
  text-decoration none
  color #4E2188
  &:hover
    color #8E2188

/* Hero */

.hero
  display flex
  justify-content center
  align-items center
  height 100vh

.hero-container
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-color #FFFFFF
  width 640px
  height 580px
  box-shadow 0px 12px 51px -10px rgba(0,0,0,0.6)

.hero-hello-world
  flex 1
  display flex
  flex-direction column
  justify-content center
  align-items center

h1
  font-size 2rem
  text-align center

  .blink
    font-size 4rem
    font-style normal
    font-weight normal
    line-height 9rem

.blink
  animation blink 3s ease-out 0s infinite

@keyframes blink
  50%
    opacity 0.4
  @-webkit-keyframesblink
  50%
    opacity 0.5

.hash-tag
  font-size 1rem
  font-weight bold
  font-style normal

.language-list
  display flex
  align-items center
  height 48px
  margin-bottom 36px
  padding 0
  list-style none

.language-list li a
  margin 0 6px
  padding 6px 12px
  font-size 1.2rem
  font-weight bold

/* Main */

main
  background-color white
  box-shadow 0px 0px 160px 140px #2e2188
  background-image linear-gradient(0deg, #000, #2e2188)

/* About */

.about
  background-color #FFFFFF

.about p
  font-family 'Roboto Condensed', sans-serif
  font-size 1.05rem

/* Footer */

footer
  display flex
  justify-content center
  align-items center
  background-color black
  height 60px

footer small
  color white
